<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/friend_picture"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/Name"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:id="@+id/ConfirmRequest"
            android:background="@drawable/left_corners"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/confirm1"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:id="@+id/deleteRequest"
            android:background="@drawable/rigth_corners"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/delete"

            />

    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999"
        android:layout_below="@+id/image"
        />

</RelativeLayout>



