<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="45dp"
    android:paddingBottom="30dp"
    android:paddingTop="45dp"
    android:background="@mipmap/three">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sawa"
        android:textSize="70dp"
        android:fontFamily="cursive"
        android:textColor="#7c017c"
        android:layout_marginLeft="65dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:drawableLeft="@mipmap/account"
        android:drawablePadding="5dp"
        android:ems="20"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="0dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textColorHint="#7c017c"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/lock2"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="0dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textColorHint="#7c017c"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Log In"
        android:id="@+id/button"
        android:textColor="#FFF"
        android:background="@drawable/selector_xml_btn_yellow"
        android:layout_gravity="center_horizontal"
        android:onClick="checkLogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot password?"
        android:textColor="#fff"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="forgot_pass"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don't have an account ? "
        android:textColor="#fff"
        android:textSize="16dp"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Register Now"
            android:textColor="#7c017c"
            android:textSize="16dp"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="register"
            />
</LinearLayout>
</LinearLayout>